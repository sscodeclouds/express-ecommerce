<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <% if (successMessage) { %>
            <div class="user-message user-message--success"><%= successMessage %></div>
        <% } %>
        <form class="login-form" action="/signup" method="POST" novalidate>
            <div class="form-control">
                <label for="name">Name</label>
                <input type="name" name="name" id="name" value="<%= oldInput.name %>" class="<%= validationErrors.find(e => e.param === 'name') ? 'invalid' : '' %>">
                <%- validationErrors.find(e => e.param === 'name') ? `<span class="validation-error">${validationErrors.find(e => e.param === 'name').msg}</span>` : '' %>
            </div>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email" value="<%= oldInput.email %>" class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>">
                <%- validationErrors.find(e => e.param === 'email') ? `<span class="validation-error">${validationErrors.find(e => e.param === 'email').msg}</span>` : '' %>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" value="<%= oldInput.password %>" class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>">
                <%- validationErrors.find(e => e.param === 'password') ? `<span class="validation-error">${validationErrors.find(e => e.param === 'password').msg}</span>` : '' %>
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" value="<%= oldInput.confirmPassword %>" class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>">
                <%- validationErrors.find(e => e.param === 'confirmPassword') ? `<span class="validation-error">${validationErrors.find(e => e.param === 'confirmPassword').msg}</span>` : '' %>
            </div>
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>
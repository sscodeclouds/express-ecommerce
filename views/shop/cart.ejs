    <body>
        <%- include('../includes/navigation.ejs') %>

        <% if(products.length > 0) { %>
            <ul>
                <% products.forEach((product, index) => { %>
                    <li><%= product.productData.title + ' (' + product.qty + ')' %><br><br><form method="POST" action="/delete-cart-item"><input type="hidden" name="productId" value="<%= product.productData.id %>"><button class="btn" type="submit">Delete</button></form></li>
                <% }) %>
            </ul>
        <% } %>

